<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    tools:ignore="UselessParent"
    android:id="@+id/pokemon_list_layout">

    <ImageView
        android:id="@+id/pokemon_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="@string/pokemon_list_image_description"
        android:layout_marginEnd="20dp"
        android:scaleType="fitCenter"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/pokemon_name"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/pokemon_image"
        android:textColor="#000"
        android:textSize="17sp"
        tools:text="Bulbasaur" />

    <TextView
        android:id="@+id/type_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pokemon_name"
        android:layout_toEndOf="@id/pokemon_image"
        android:textColor="#000"
        tools:text="Grass, Poison" />

    <TextView
        android:id="@+id/spawn_chance_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/type_text"
        android:layout_toEndOf="@id/pokemon_image"
        android:textColor="#000"
        tools:text="1.58" />

</RelativeLayout>